<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/top_padding"
    tools:context="quicky.creativelyblessed.com.quickthinking.ResultActivity">



   <RelativeLayout
       android:id="@+id/bestScoreLayout"
       android:layout_marginLeft="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/bestScore"
           android:layout_centerHorizontal="true"
           android:textSize="25sp"
           android:text="BEST SCORE"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <TextView
           android:id="@+id/bestScoreText"
           android:textSize="20sp"
           android:text="00"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/bestScore"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />


   </RelativeLayout>


    <TextView
        android:id="@+id/resulttext"
        android:text="SCORE"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bestScoreLayout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/scoreText"
        android:text="00"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resulttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/scoreText"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <Button
           android:id="@+id/Home"
           android:layout_margin="10dp"
           android:textSize="35sp"
           android:text="Home"
           android:background="@xml/button_shape"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:onClick="Home"/>

        <Button
            android:id="@+id/Play"
            android:text="Play"
            android:textSize="35sp"
            android:background="@xml/button_shape"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="PlayAgain"/>

        <Button
            android:id="@+id/Share"
            android:text="Share"
            android:textSize="35sp"
            android:background="@xml/button_shape"
            android:onClick="getScreenShot"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>






</RelativeLayout>
