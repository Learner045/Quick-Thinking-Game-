<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/top_padding"
    tools:context="quicky.creativelyblessed.com.quickthinking.PlayActivity">


    <LinearLayout
        android:id="@+id/layer1"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_marginTop="12dp"
            android:progressDrawable="@xml/progress_drawable"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/scoreText"
            android:textSize="30sp"
            android:text="00"
            android:background="#f691f4"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/image"
        android:layout_below="@id/layer1"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="250dp" />



    <LinearLayout
        android:id="@+id/layer3"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:layout_below="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        >

        <Button

            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:tag="0"
            android:background="@xml/button_shape"
            android:textColor="#FFFFFF"
            android:text="String 1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="8dp"
            android:onClick="chooseAns"
            android:layout_margin="5dp"

            />
        <Button android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@xml/button_shape"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:tag="1"
            android:text="String 1"
            android:onClick="chooseAns"

            />


    </LinearLayout>




</RelativeLayout>
