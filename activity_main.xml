<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgg"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/top_padding"
    tools:context="quicky.creativelyblessed.com.quickthinking.MainActivity">



  <RelativeLayout
      android:background="#ffff"
      android:layout_margin="15dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layer1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/logo"
            android:text="Quick\nThinking"
            android:textSize="55sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#330033"
            android:layout_width="226dp"
            android:layout_height="124dp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_toRightOf="@id/logo"
            android:src="@drawable/mylogo"
            android:layout_width="wrap_content"
            android:layout_height="124dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/TwoButtons"
        android:layout_below="@+id/layer1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:layout_height="130dp"
            android:id="@+id/Math"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:text="Math"
            android:background="@xml/button_shape"
            android:textSize="35sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="playMath"/>

        <Button

            android:layout_height="130dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:id="@+id/MyPlayButton"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Play"
            android:background="@xml/button_shape2"
            android:textSize="35sp"
            android:onClick="playEnglish"
            />

    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/TwoButtons"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:text="Share"
            android:textStyle="bold"
            android:id="@+id/MyShareButton"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:background="@xml/button_shape"
            android:onClick="shareApp"/>


        <Button
            android:text="Settings"
            android:layout_margin="5dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:id="@+id/Settings"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:background="@xml/button_shape"
            android:onClick="Settings"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="35dp"
        android:background="#dd6edd16"
        android:id="@+id/group"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>
  </RelativeLayout>


</RelativeLayout>
